

    {% for product in products %}

        <div class="card-design m-4" style="width: 25rem;">
            <img src="{{ product.image }}" class="card-img-top" alt="...">
            <div class="card-body">
                <div class="card-title d-flex mb-3">
                    <h5 class="card-title">{{ product.name }}</h5>
                    <small class="card-title text-primary">({{ product.category.name }})</small>
                </div>
                <p class="card-text">{{ product.excerpt }}</p>
                <div class="d-flex justify-content-end"><a href="{{ path('app_product_read', {'id': product.id}) }}" class="btn btn-secondary">Show</a></div>
            </div>
        </div>

    {% endfor %}
