{% extends 'base.html.twig' %}

{% block title %}S'enregistrer{% endblock %}

{% block body %}

<div class="mt-5 d-flex flex-column align-items-center justify-content-center">

    <h1>Créer un compe</h1>

    {{ form_start(registrationForm) }}
        {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.firstname, {'attr': {'placeholder': 'Prénom'}}) }}
        {{ form_row(registrationForm.lastname, {'attr': {'placeholder': 'Nom de famille'}}) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword.first, {'attr': {'placeholder': 'Mot de passe'}}) }}
        {{ form_row(registrationForm.plainPassword.second, {'attr': {'placeholder': 'Répéter le mot de passe'}}) }}

        <button type="submit" class="btn btn-primary">Créer mon compte</button>
    {{ form_end(registrationForm) }}

</div>
{% endblock %}
