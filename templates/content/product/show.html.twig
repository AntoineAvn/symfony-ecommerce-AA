{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1 class="d-flex justify-content-center mt-5">{{ product.name }}</h1>

<div class="card-wrapper d-flex justify-content-center mt-5">
    <div class="card-show w-75 mb-3">
        <img class="card-img-top" src="{{ product.image }}" alt="Card image cap">
        <div class="card-body">
            <h5 class="card-title text-primary">{{ product.category.name }}</h5>
            <p class="card-text mt-2">{{ product.description }}</p>
            <div class="d-flex justify-content-end"><a href="{{ path('app_product_addCart', {'id': product.id}) }}" class="btn btn-secondary">Ajouter au panier</a></div>
        </div>
    </div>
</div>

    <a href="{{ path('app_products') }}">back to list</a>

    <a href="{{ path('app_product_update', {'id': product.id}) }}">Update</a>

    {{ include('content/product/_delete_form.html.twig') }}
{% endblock %}
